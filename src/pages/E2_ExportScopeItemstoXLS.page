    <td>{!scope.parentScope}</td>
    <td>{!scope.complexity}</td>
    <td>{!scope.scopeItemtype}</td>
    <td><apex:outputtext escape="false" value="{!scope.description}"/></td>
    <td><apex:outputtext escape="false" value="{!scope.assumption}"/></td>
    <td>{!scope.loeHrs}</td>
</tr>
</apex:repeat>
</tbody>
</table>

